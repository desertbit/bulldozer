<div id="bulldozer-topbar">
	<div class="bulldozer-topbar-logo"></div>
{{if %.editmode.IsActive}}
	<ul class="bulldozer-left-menu">
		<li><a id="{{id "stopEdit"}}">
			<i class="fa fa-close"></i>
			<span>{{tr "blz.topbar.stopEditMode"}}</span>
		</a></li>
		<li><a id="{{id "save"}}">
			<i class="fa fa-save"></i>
			<span>{{tr "blz.topbar.saveChanges"}}</span>
		</a></li>
		{{/*<li><a id="{{id "discard"}}">
			<i class="fa fa-trash-o"></i>
			<span>{{tr "blz.topbar.discardChanges"}}</span>
		</a></li>*/}}
	</ul>
{{else}}
	<ul class="bulldozer-left-menu">
		<li><a id="{{id "startEdit"}}">
			<i class="fa fa-pencil"></i>
			<span>{{tr "blz.topbar.startEditMode"}}</span>
		</a></li>
	</ul>
	<ul class="bulldozer-right-menu">
		<li><a>
			<i class="fa fa-gears"></i>
			<span>{{tr "blz.topbar.controlPanel"}}</span>
		</a></li>
		<li>
			<a>
				<i class="fa fa-user"></i>
				<span>{{%.auth.LoginName}}</span>
			</a>
			<ul>
				<li><a id="{{id "logout"}}">
					<i class="fa fa-power-off fa-fw"></i>
					<span>{{tr "blz.topbar.logout"}}</span>
				</a></li>
			</ul>
		</li>
	</ul>
{{end}}
</div>
{{js load}}
	Bulldozer.topbar.space(true);

	$("#{{id "startEdit"}}").click(function() {
		Bulldozer.loadingIndicator.show();
		{{emit StartEdit()}}
	});
	$("#{{id "stopEdit"}}").click(function() {
		Bulldozer.loadingIndicator.show();
		setTimeout(function() {
			{{emit StopEdit()}}
		}, 2000);
	});
	$("#{{id "save"}}").click(function() {
		Bulldozer.loadingIndicator.show();
		{{emit SaveChanges()}}
	});
	$("#{{id "discard"}}").click(function() {
		Bulldozer.loadingIndicator.show();
		{{emit DiscardChanges()}}
	});
	$("#{{id "logout"}}").click(function() {
		{{emit Logout()}}
	});
{{end js}}