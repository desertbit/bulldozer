{{must auth.IsAuth}}

<div id="bud-ctrl-nav">
	<ul>
		{{range $id, $page := #.Pages}}
			<li><a href="{{#.PageUrl}}/{{$id}}"><i class="fa fa-fw {{$page.Icon}}"></i><span>{{$page.Title}}</span></a></li>
		{{end}}
	</ul>
</div>
<div id="bud-ctrl-view">
	<p>View</p>
</div>

{{js load}}
	$("#bud-ctrl-nav").hover(function() {
		$("#bud-ctrl").addClass("bud-ctrl-expand");
	}, function() {
		$("#bud-ctrl").removeClass("bud-ctrl-expand");
	});
{{end js}}